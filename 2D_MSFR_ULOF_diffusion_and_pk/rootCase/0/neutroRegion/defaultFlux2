FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      defaultFlux;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 -2 -1 0 0 0 0 ];

internalField   uniform 1;

boundaryField
{
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
    topwall
    {
        type fixedValue;
        value uniform 0;
    }
    bottomwall
    {
        type fixedValue;
        value uniform 0;
    }
    reflector
    {
       type fixedValue;
        value uniform 0;
    }
    hx
    {
        type fixedValue;
        value uniform 0;
    }
}


